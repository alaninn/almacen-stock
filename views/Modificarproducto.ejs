<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Editar Producto</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

 <div class="container mt-3 container-mobile">
    <div class="card card-mobile">
      <div class="card-body">
        <h2 class="h4">Editar Producto</h2>
        
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- FORMULARIO COMPLETO (FALTABA ESTA ETIQUETA) -->
        <form action="/productos/<%= producto.id %>/actualizar" method="post" enctype="multipart/form-data">
  <input type="hidden" name="imagen_actual" value="<%= producto.imagen %>">
  
          <div class="mb-2">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control form-control-mobile" value="<%= producto.nombre %>" required>
          </div>
          
          <div class="mb-2">
            <label class="form-label">Descripción</label>
            <textarea name="descripcion" class="form-control form-control-mobile"><%= producto.descripcion %></textarea>
          </div>
          
          <div class="mb-2">
            <label class="form-label">Categoría</label>
            <select name="categoria_id" class="form-select form-control-mobile" required>
              <% categorias.forEach(categoria => { %>
                <option 
                  value="<%= categoria.id %>" 
                  <%= categoria.id == producto.categoria_id ? 'selected' : '' %>
                >
                  <%= categoria.nombre %>
                </option>
              <% }); %>
            </select>
          </div>
          
          <div class="mb-2">
            <label class="form-label">Stock</label>
            <input 
              type="number" 
              name="stock" 
              class="form-control form-control-mobile" 
              min="0" 
              required 
              value="<%= producto.stock %>"
            >
          </div>
		  
		  <!-- Dentro del formulario -->
<div class="mb-2">
  <label class="form-label">Stock Mínimo</label>
  <input 
    type="number" 
    name="stock_minimo" 
    class="form-control form-control-mobile" 
    min="0" 
    required 
    value="<%= producto.stock_minimo %>"
  >
</div>
		  
		  
		  
		  
          
          <div class="mb-3">
            <label class="form-label">Imagen Actual</label>
            <% if (producto.imagen) { %>
              <img src="<%= producto.imagen %>" width="100" class="d-block mb-2 img-mobile">
              <input type="hidden" name="imagen_actual" value="<%= producto.imagen %>">
            <% } %>
            <label class="form-label">Nueva Imagen (opcional)</label>
            <input type="file" name="imagen" class="form-control form-control-mobile">
          </div>
          
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary btn-mobile">Guardar Cambios</button>
            <a href="/stock" class="btn btn-secondary btn-mobile">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>