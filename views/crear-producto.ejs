<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Crear Producto</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  
  
   <!-- Alerta de éxito  -->
  <% if (success) { %>
    <div class="alert alert-success alert-fixed">
      <%= success %>
    </div>
  <% } %>

  <div class="container mt-3 mt-md-5 container-mobile">
    <div class="card card-mobile">
      <div class="card-body">
       <h2 class="h2-mobile">Crear Producto</h2>
        <form action="/crear-producto" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control form-control-mobile" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea name="descripcion" class="form-control form-control-mobile"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Categoría</label>
            <select name="categoria_id" class="form-select form-control-mobile" required>
              <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
              <% }); %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Stock</label>
            <input type="number" name="stock" class="form-control form-control-mobile" required>
          </div>
		  
		  
		  <div class="mb-3">
  <label class="form-label">Stock Mínimo</label>
  <input 
    type="number" 
    name="stock_minimo" 
    class="form-control form-control-mobile" 
    min="0" 
    required
    value="5"
  >
</div>
		  
		  
          <div class="mb-3">
            <label class="form-label">Imagen</label>
            <input type="file" name="imagen" class="form-control form-control-mobile">
          </div>
          <button type="submit" class="btn btn-success btn-mobile">Guardar</button>
        </form>
      </div>
    </div>
  </div>
  
  
  
  

  <%- include('partials/footer') %>
  
  
  <!-- Script para ocultar alerta (nuevo) -->
  <script>
    // Ocultar automáticamente después de 3 segundos
    setTimeout(() => {
      const alerta = document.querySelector('.alert');
      if(alerta) alerta.remove();
    }, 1000);
  </script>
  
  
</body>
</html>